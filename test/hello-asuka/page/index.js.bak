import * as hmUI from '@zos/ui';
import {
  AsukaUI,
  Color,
  LayoutManagerFactory,
  NativeBindingsFactory,
  createViewRenderer,
  range,
} from '@cuberqaq/asuka-ui';
Page({
  build() {
    let asuka = new AsukaUI();
    asuka.registerNodeFactory(NativeBindingsFactory);
    asuka.registerNodeFactory(LayoutManagerFactory);
    let mainView = asuka.mountView(hmUI);

    let hstack = asuka.createNode('hstack');

    for (let i of range(20, 50, 4)) {
      let text = asuka.createNode('text');
      text.setProperty('text', 'Hello Asuka!');
      text.setProperty('color', Color.random());
      text.setProperty('text_size', i);
      hstack.mountChild(text);
    }

    mainView.mountChild(hstack);
    asuka.refreshSync();
  },
});
